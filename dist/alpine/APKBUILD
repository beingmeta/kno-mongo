# Contributor: beingmeta repository manager <repoman@beingmeta.com>
# Maintainer: beingmeta repository manager <repoman@beingmeta.com>
pkgname=kno-mongo
pkgver=2001.1.1
pkgrel=85
pkgdesc="MongoDB bindings for KNO"
url="https://kno.so/"
arch="all"
license="GPLV3"
depends=""
makedepends="kno-dev"
install=""
#subpackages="$pkgname-dev $pkgname-doc"
subpackages=""
source="https://github.com/beingmeta/kno-mongodb/archive/trunk.tar.gz"
builddir="kno-mongodb"

build() {
	wget ${source}
	tar -xf trunk.tar.gz; rm trunk.tar.gz
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-sudo
	make -j
}

check() {
	cd src/${builddir}
	pwd
	make
}

package() {
	cd src/${builddir}
	make DESTDIR="$pkgdir" SUDO= install
}
